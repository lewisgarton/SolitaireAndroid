<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintHeight_default="percent"
        tools:layout_constraintHeight_percent="0.05"
        android:background="@android:color/black"
        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_toTopOf="@id/constraint_foundations">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_menu_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            tools:layout_constraintWidth_default="percent"
            tools:layout_constraintWidth_percent="0.30"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintEnd_toStartOf="@id/constraint_menu_info"
            tools:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/menu"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintEnd_toEndOf="parent"
                tools:layout_constraintStart_toStartOf="parent"
                tools:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_menu_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:layout_constraintHeight_default="percent"
            tools:layout_constraintHeight_percent="0.05"
            tools:layout_constraintWidth_default="percent"
            tools:layout_constraintWidth_percent="0.70"

            android:background="@android:color/black"

            tools:layout_constraintStart_toEndOf="@id/constraint_menu_button"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintBottom_toTopOf="parent">

            <TextView
                android:id="@+id/txt_score_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_constraintEnd_toEndOf="parent"
                tools:layout_constraintStart_toStartOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_foundations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/holo_blue_dark"
        tools:layout_constraintBottom_toTopOf="@+id/constraint_tableaus"
        tools:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintHeight_default="percent"
        tools:layout_constraintHeight_percent=".15"
        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toBottomOf="@+id/constraint_menu">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_foundation_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_foundation_1"
            tools:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frame_deck"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"></FrameLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_foundation_1"
            android:layout_width="0dp"
            android:layout_height="0dp"

            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_foundation_0"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_foundation_2"
            tools:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frame_top_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"></FrameLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_foundation_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_foundation_1"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_foundation_3"
            tools:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frame_foundation_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"></FrameLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_foundation_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_foundation_2"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_foundation_4"
            tools:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frame_foundation_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"></FrameLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_foundation_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_foundation_3"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_foundation_5"
            tools:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frame_foundation_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"></FrameLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_foundation_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_foundation_4"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_foundation_6"
            tools:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frame_foundation_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"></FrameLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_foundation_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_foundation_5"
            tools:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frame_foundation_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"></FrameLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_tableaus"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        tools:layout_constraintBottom_toBottomOf="parent"

        tools:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintHeight_default="percent"
        tools:layout_constraintHeight_percent=".80"
        tools:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toBottomOf="@+id/constraint_foundations"
        tools:background="@color/colorPrimary">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_tableau_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_toLeftOf="parent"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_tableau_1"
            tools:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_tableau_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent"></LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_tableau_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_tableau_0"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_tableau_2"
            tools:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_tableau_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent"></LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_tableau_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_tableau_1"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_tableau_3"
            tools:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_tableau_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent"></LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_tableau_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_tableau_2"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_tableau_4"
            tools:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_tableau_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent"></LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_tableau_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_tableau_3"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_tableau_5"
            tools:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_tableau_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent"></LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_tableau_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_tableau_4"
            tools:layout_constraintRight_toLeftOf="@+id/constraint_tableau_6"
            tools:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_tableau_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent"></LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_tableau_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:layout_constraintBottom_toBottomOf="parent"

            tools:layout_constraintLeft_toRightOf="@+id/constraint_tableau_5"
            tools:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintTop_toTopOf="parent"
            tools:background="@color/colorAccent">

            <LinearLayout
                android:id="@+id/layout_tableau_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                tools:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_toLeftOf="parent"
                tools:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_toTopOf="parent"
                tools:background="@color/colorAccent"></LinearLayout>

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>

</FrameLayout>